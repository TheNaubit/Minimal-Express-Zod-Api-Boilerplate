{
  "name": "minimal-express-zod-api-boilerplate",
  "version": "1.0.0",
  "description": "ðŸ“ A minimal Express Zod API boilerplate, ready to clone and build!",
  "main": "dist/index.js",
  "engines" : { 
    "node" : ">=16.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist ./src/client/client.ts ./src/docs/api.yaml",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && npm run lint && tsc && echo \"âœ… Build ready in the /dist folder. Run it with npm run start\"",
    "start": "NODE_ENV=production node .",
    "dev": "NODE_ENV=development nodemon",
    "dev:no-reload": "NODE_ENV=development ts-node -r tsconfig-paths/register ./src/index.ts",
    "lint": "eslint  --cache \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint  --cache --fix \"src/**/*.{js,ts}\"",
    "generate:client": "ts-node -r tsconfig-paths/register ./src/scripts/clientGenerator.ts && eslint --fix \"src/client/**/*.{js,ts}\"",
    "generate:docs": "ts-node -r tsconfig-paths/register ./src/scripts/docsGenerator.ts",
    "docker:build": "docker build -t naucode/minimal-express-zod-api-boilerplate:latest .",
    "docker:run": "docker run -e NODE_ENV=production naucode/minimal-express-zod-api-boilerplate",
    "docker:build:dev": "docker build --target builder -t naucode/minimal-express-zod-api-boilerplate:dev .",
    "docker:run:dev": "docker run -e NODE_ENV=development naucode/minimal-express-zod-api-boilerplate:dev"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint:fix"
  },
  "keywords": [
    "Nodejs",
    "typescript",
    "express",
    "boilerplate",
    "template",
    "zod"
  ],
  "author": "Al - @naucode",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-zod-api": "^10.1.2",
    "module-alias": "^2.2.2",
    "znv": "^0.3.2",
    "zod": "^3.21.4",
    "@total-typescript/ts-reset": "^0.4.2"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/express": "^4.17.17",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.3"
  }
}
